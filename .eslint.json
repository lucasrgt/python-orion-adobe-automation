{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": false
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-undef": "off",
    "no-unused-vars": "warn",
    "no-extra-semi": "error",
    "no-var": "off",
    "no-const-assign": "off",
    "prefer-const": "off"
  }
}